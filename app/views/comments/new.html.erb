<%= form_with scope: :comment, url: create_comment_path, local: true do |f| %>

<p>
  <% if @comment.errors.any? %>
    <ul>
      <% @comment.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  <% end %>
</p>

<p>
  <%= f.label :name %><br/>
  <%= f.text_field :name %>
</p>


<p>
  <%= f.label :comments %><br/>
  <%= f.text_field :comments %>
</p>

<p>
  <%= f.submit %>
</p>

<% end %>